{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {},
    "variables": {
        "deploymentUrlBase": "https://raw.githubusercontent.com/SkillsFundingAgency/funding-platform-building-blocks/master/templates/"
    },
    "resources": [
        {
            "apiVersion": "2017-05-10",
            "name": "app-service-plan",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('deploymentUrlBase'),'app-service-plan.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "appServicePlanName" : {
                        "value": "pipeline-asp-01"
                    },
                    "aspLocation": {
                        "value": "West Europe"
                    },
                    "aspSize": {
                        "value": "1"
                    },
                    "aspInstances": {
                        "value": 1
                    },
                    "nonASETier": {
                        "value": "Standard"
                    }
                }

            }
        },        
        {
            "apiVersion": "2017-05-10",
            "name": "app-service",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('deploymentUrlBase'),'app-service.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "appServiceName": {
                        "value": "pipeline-app-01" 
                    },
                    "appServicePlanName" : {
                        "value": "pipeline-asp-01"
                    },
                    "appServicePlanResourceGroup": {
                        "value": "pipeline-rg" 
                    },
                    "http20Enabled": {
                        "value": true
                    },
                    "ftpsState": {
                        "value": "Disabled"
                    }
                }

            },
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments', 'app-service-plan')]"
            ]
        },     
        {
            "apiVersion": "2017-05-10",
            "name": "function-app",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('deploymentUrlBase'),'function-app.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "functionAppName": {
                        "value": "pipeline-func-01" 
                    },
                    "appServicePlanName" : {
                        "value": "pipeline-asp-01"
                    },
                    "appServicePlanResourceGroup": {
                        "value": "pipeline-rg" 
                    },
                    "http20Enabled": {
                        "value": true
                    },
                    "ftpsState": {
                        "value": "Disabled"
                    }
                }

            },
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments', 'app-service-plan')]"
            ]
        }
    ]
}